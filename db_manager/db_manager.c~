#include<stdio.h>
#include<sqlite3.h>
#include<sys/stat.h>
#include"db_manager.h"


int create_DB(char* name_DB){
  struc stat s;
  if(stat(ptrFile, &s) == 0)
    return EXIT_SUCCESS;
  else
    system("sqlite3 %s",name_DB);
  return EXIT_SUCCESS;
}

int open_DB(Char* name_DB, sqlite3* db){
  return sqlite3_open(name_DB, &db);
}

